{
  "name": "Bun Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."  // Set build context to the project root
  },
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000],
  "postCreateCommand": "bun install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode"
      ]
    }
  }
}